RewriteEngine On
RewriteBase /

# Handle API requests
RewriteRule ^api/(.*)$ https://ai-legal-assistant.sbouldin.com/api/$1 [P,L]

# If the request is for an existing file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# For all other requests, serve the React app's index.html
RewriteRule ^ client/dist/index.html [L]

# Enable reverse proxy settings for API
ProxyPass /api/ https://ai-legal-assistant.sbouldin.com/api/ timeout=300 Keepalive=On
ProxyPassReverse /api/ https://ai-legal-assistant.sbouldin.com/api/

# Set headers for proxy
RequestHeader set X-Forwarded-Proto "https"
RequestHeader set X-Forwarded-Port "443"

# Increase timeout for large file uploads
TimeOut 300
ProxyTimeout 300

# Allow large file uploads
LimitRequestBody 104857600

# Enable mod_headers
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
    Header set Access-Control-Max-Age "3600"
    
    # Handle preflight OPTIONS requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
